<div class="section">
    {{#if check }}
      <div class = "fsection">
        <h1>Failed to authenticate to the website, please double check your user name and password</h1>
        <a href = "http://localhost:8000/">Click To Continue</a>
      </div>
        {{else}}
        <div class="fixed-action-btn horizontal">
          <a class="btn-floating btn-small red">
            <i class="large material-icons">person_outline</i>
          </a>

          <ul>
            <li><a class="btn-floating btn-small red modal-trigger" href = "http://localhost:8000/"><i class="material-icons">arrow_back</i></a></li>
            <!-- <li><a class="btn-floating btn-small yellow darken-1 modal-trigger" href = "#sign"><i class="material-icons">assignment_turned_in</i></a></li> -->
          </ul>
        </div>

        <div class="container">   <!--container-->
          <br><br>
          <div class = "top">
            <h1 class="header center black-text">Welcome {{name}}</h1>
          </div>
          <div class="row center">

            <div class="row">
              <div class="col s12">
                <ul class = tabs>
                  <div class="indicator yellow" style="z-index:1"></div>
                  <li class="tab col s3"><a class = "act" href="#test1">Location</a></li>
                  <li class="tab col s3"><a class = "disa" href="#test2">Distance</a></li>
                  <li class="tab col s3"><a class = "price" href="#test3" span style = "color: black">Price</a></li>
                </ul>
              </div>

              <div id="test1" class="col s12">
                <form method='post' action='/resultPage' class = "col s12">
                  <div class="row">
                    <div class="input-field col s6">
                      <input name = "start_location" id="From" type="text" class="validate">
                      <label for="first_name"><b>From</b></label>
                    </div>

                    <div class="input-field col s6">
                      <input name = "end_location" id="To" type="text" class="validate">
                      <label for="last_name"><b>To</b></label>
                    </div>
                  </div>
                     <button class="btn waves-effect waves-light btn-large" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>
                </form>
              </div>


              <div id="test2" class="col s12">
                <form method='post' action='/resultPage' class = "col s12">
                  <div class="row">
                    <div class="input-field col s6">
                      <input name = "start_location" id="From" type="text" class="validate">
                      <label for="first_name"><b>From</b></label>
                    </div>

                    <div class="input-field col s6">
                      <input name = "distance" id="distance" type="text" class="validate">
                      <label for="last_name"><b>Distance (miles)</b></label>
                    </div>
                  </div>
                     <button class="btn waves-effect waves-light btn-large" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>
                </form>
              </div>


              <div id="test3" class="col s12">
                <form method='post' action='/resultPage' class = "col s12">
                  <div class="row">
                    <div class="input-field col s6">
                      <input name = "start_location" id="From" type="text" class="validate">
                      <label for="first_name"><b>From</b></label>
                    </div>

                    <div class="input-field col s6">
                      <input name = "price" id="price" type="text" class="validate">
                      <label for="last_name"><b span style ="color: black">Price (dollars)</b></label>
                    </div>
                  </div>
                     <button class="btn waves-effect waves-light btn-large" type="submit" name="action">Submit
                  <i class="material-icons right">send</i>
                </button>
                </form>
              </div>
            </div>

          </div>
          <br><br>
        </div>

{{/if}}  <!--END OF IF STATEMENT-->
</div>



